---
import Header from '../components/header.astro';
import FeedLink from '../components/feed-link.astro';
import '../styles/global.css';

export interface Props {
	title: string,
	description: string,
	includeSearch?: boolean,
}

const { title, description, includeSearch } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en-US">
	<head>
		<link rel="shortcut icon" href="/favicon.png" />
		{includeSearch && (
			<link href="/_pagefind/pagefind-ui.css" rel="stylesheet">
			<script src="/_pagefind/pagefind-ui.js" type="text/javascript"></script>
		)}
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta property="og:title" content={title}>
        <meta property="og:description" content={description}>
        <meta property="og:url" content={Astro.url}>
		<meta property="og:image" content="https://www.einenlum.com/favicon.png">

		<meta name="twitter:card" content="summary">
		<meta name="twitter:site" content="einenlum.com">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image" content="https://www.einenlum.com/favicon.png">

		<meta charset="UTF-8"> 
		<title>{title}</title>
	</head>
	<body class="dark:bg-neutral-900 dark:text-amber-50">
		<div class="mx-auto px-2 md:px-0 sm:max-w-2xl 2xl:max-w-3xl mb-20 lg:mb-40 xl:mb-60">
			<Header />
			<slot />
			<FeedLink />
		</div>
	</body>
</html>
