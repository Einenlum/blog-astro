---
import ImageLegend from './image-legend.astro';

export interface Props {
    src: string,
    legend: string,
    alt: string
}

const { src, legend, alt} = Astro.props as Props
---

<div class="my-10 mx-auto">
        <img
            class="mx-auto"
            src={src}
            alt={alt}
        />
    <ImageLegend><span class="italic">{legend}</span></ImageLegend>
</div>
